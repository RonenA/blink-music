<% content_for :head do %>
	<script>
		var tracksInfo = <%=j @tracks.to_json.html_safe %>;
		var shareToken = <%=j @user.share_token.to_json.html_safe %>;
	</script>

	<%= javascript_include_tag "blast" %>
<% end %>

<div class="loading-bar-bg">
</div>

<div class="container">

	<div id="page-home">
		<h1>Trackblast</h1>
		<h2 class="home-lead">Discover new music by voting on two-second snippets.</h2>

		<button class="btn--large btn--blue js-start-button">
			Let's Play <i class="icon-play"></i>
		</button>

	</div>

	<div id="page-get-ready" style="display:none">
		<h1 class="js-ready-heading">Ready?</h1>
	</div>

	<nav class="l-top-right home-nav">
		<ul>
			<li><%= link_to "My Likes", results_path(current_user.share_token), :class => "icon-heart" %></li>
			<li><%= mail_to "hello@trackblast.com", "Contact Us", :class => "icon-email" %></li>
		</ul>
	</nav>

	<div class="instructions l-bottom">
		<div class="box key js-like-key">A</div>
		<label class="key-label">to like,</label>
		<div class="box key js-dislike-key">L</div>
		<label class="key-label">to pass</label>
	</div>

</div>

<div class="feedback-icon animated">
</div>

