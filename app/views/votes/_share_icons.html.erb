<div class="share__icons ga-share-links">
	<%= link_icon :icon => 'twitter',
								:class => 'twitter-popup',
								:url => twitter_share_url(
									:url => current_page_url,
									:text => "Check out these songs I found on Trackburst"),
								"data-share-type" => "Twitter" %>

	<%= link_icon :icon => 'facebook-squared',
								:class => 'facebook-popup',
								"data-share-type" => "Facebook" %>

	<%= link_icon :icon => 'email',
								:url => " ",
							  :link_type => :mail_to_block,
							  :subject => "Trackburst",
							  :body => current_page_url,
							  "data-share-type" => "Email" %>
</div>
